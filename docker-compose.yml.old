version: "3.4"

services:
    sendeodb:
        image: "mcr.microsoft.com/mssql/server:2022-latest"
        container_name: "sendeo-db"
        ports:
          - "1433:1433"
        environment:
            SA_PASSWORD: "Sendeo123."
            ACCEPT_EULA: "Y"

    orderapi:
        container_name: "sendeo-orderapi"
        build:
          context: .
          dockerfile: OrderAPI/Dockerfile
        ports:
          - "8080:80"
        depends_on:
          - sendeodb